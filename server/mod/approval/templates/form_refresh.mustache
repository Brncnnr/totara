{{!
    @template mod_approval/form_refresh

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * content: HTML

    Example context (json):
    {
        "title": string
        "inuse": bool
        "mform": "<form ...> ... </form>"
    }
}}
<div class="form_refresh">
  <h2>{{{title}}}</h2>
  {{#inuse}}
    <div class="alert alert-warning alert-with-icon">
      <div class="alert-icon">{{#flex_icon}}core|notification-warning, , , ft-size-200{{/flex_icon}}</div>
      <div class="alert-message">{{#str}}refresh_form_schema_warning, mod_approval{{/str}}</div>
    </div>
    {{#newkeys}}
      <h3>{{#str}}new_form_keys, mod_approval{{/str}}</h3>
      <ul>

      </ul>
    {{/newkeys}}
    {{#missingkeys}}
      <h3>{{#str}}missing_form_keys, mod_approval{{/str}}</h3>
      <ul>

      </ul>
    {{/missingkeys}}
  {{/inuse}}
  {{{mform}}}
</div>